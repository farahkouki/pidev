{# sponsor/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'style': 'background: transparent !important; border: none;'}}) }}
    <div class="form-group">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.adresse) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.mail, 'Mail', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse email'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.mail) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'font-weight-bold'}}) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le numéro de téléphone'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.telephone) }}
        </div>
    </div>

    {# Ajoutez d'autres champs du formulaire selon vos besoins #}

    <button type="submit" class="btn btn-primary" style="opacity: 0.8;">Enregistrer</button>
{{ form_end(form) }}

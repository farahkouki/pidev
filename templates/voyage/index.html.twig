{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}

    <table class="table" style="border: 1px solid black; border-collapse: collapse; background-color: white;">
        <thead>
            <tr>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">VilleDepart</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">Destination</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">HeureDepart</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">HeureArrivee</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">TypeVoyage</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">Type</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.villeDepart }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.destination }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.heureDepart ? voyage.heureDepart|date('H:i:s') : '' }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.heureArrivee ? voyage.heureArrivee|date('H:i:s') : '' }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.typeVoyage }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ voyage.type }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">
                    <a href="{{ path('app_voyage_show', {'id': voyage.id}) }}" style="color: black; font-weight: bold;">show</a>
                    <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}" style="color: black; font-weight: bold;">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" style="border: 1px solid black; padding: 8px; color: black;">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voyage_new') }}" style="font-weight: bold;">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}

    <table class="table" style="border: 1px solid black; border-collapse: collapse; background-color: white;">
        <thead>
            <tr>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">RÃ©ference du Voyage</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">Nom</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">Prenom</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">Email</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">NumeroTelephone</th>
                <th style="border: 1px solid black; padding: 8px; font-weight: bold; color: black;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ reservation.voyage.id }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ reservation.nom }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ reservation.prenom }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ reservation.email }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">{{ reservation.numeroTelephone }}</td>
                <td style="border: 1px solid black; padding: 8px; color: black;">
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" style="color: black; font-weight: bold;">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" style="color: black; font-weight: bold;">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" style="border: 1px solid black; padding: 8px; color: black;">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}" style="font-weight: bold;">Create new</a>
{% endblock %}
